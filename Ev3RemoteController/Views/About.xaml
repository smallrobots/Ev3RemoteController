<UserControl
    x:Class="Smallrobots.Ev3RemoteController.Views.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" 
    RequiresPointer="Never" KeyDown="Page_KeyDown"
    Background="#19D3D3D3">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Uniform" ImageSource="..\Assets\Ev3Tank-v1-12.png" Opacity="0.05"/>
        </Grid.Background>
        <TextBlock Style="{StaticResource BodyTextBlockStyle}" FontFamily="Segoe UI">
            <Run FontStyle="Normal" FontSize="24">
                Ev3 Remote Controller
            </Run>
            <LineBreak/>
            
            <Run FontStyle="Normal" FontSize="12" FontWeight="Normal">
                Version 1.0.0, Copyright 2018 
            </Run>
            <Hyperlink FontStyle="Normal" FontSize="12" FontWeight="Bold"
                       NavigateUri="https://www.smallrobots.it">
                <Run Text="Smallrobots.it"/>
            </Hyperlink>           
            <LineBreak/>
            
        </TextBlock>
    </Grid>
</UserControl>
